<Window x:Class="FinalPOE.Saving"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalPOE"
        mc:Ignorable="d"
        Title="Saving" Height="650" Width="400">

    <Border  Padding="10">
        <StackPanel Margin="0,2,0,-2">


            <!--Saving message-->
            <TextBlock Text="Saving" 
                       FontWeight="Bold" 
                       Margin="0 10"
                       FontSize="16"
                       Background="AliceBlue"
                       Foreground="Teal"
                       Padding="10"
                       TextAlignment="Center"/>

            <!--Saving amount-->
            <TextBlock Text="Please enter the amount you plan to save (ZAR)"
                       Padding="2"
                       Margin="0,20,0,0"/>

            <TextBox 
                x:Name="userSavingAmount"
                FontSize="13"               
                TextWrapping="Wrap"
                Padding="2"
                Background="AliceBlue"
                Foreground="Black"
                Text="" 
                Height="25"
                Margin="0,0,150,0"
                />

            <!--Interest rate-->
            <TextBlock Text="Please enter the Interest Rate (%) "
                       Padding="2"
                       Margin="0,20,0,0"/>

            <TextBox 
                x:Name="userSavingIntRate"
                FontSize="13"               
                TextWrapping="Wrap"
                Padding="2"
                Background="AliceBlue"
                Foreground="Black"
                Text="" 
                Height="25"
                Margin="0,0,290,0"
                />

            <!--Number of months-->
            <TextBlock Text="Please enter the number of months you plan to save "
                       Padding="2"
                       Margin="0,20,0,0"/>

            <TextBox 
                x:Name="userSavingMonths"
                FontSize="13"               
                TextWrapping="Wrap"
                Padding="2"
                Background="AliceBlue"
                Foreground="Black"
                Text="" 
                Height="25"
                Margin="0,0,290,0"
                />

            <!--Text block to tell user to first click the Submit button to store values, and then the Close button to exit the window-->
            <TextBlock Text="Please click 'Submit' to store the values, and then 'Close' to exit the window"
                       Padding="2"
                       FontSize="9.5"
                       TextAlignment="Center"
                       Margin="0,50,0,0"/>
            
            
            <!--Submit and Cancel Button-->
            <Button 
                    x:Name="Submit_Saving"
                    Content="Submit"
                    Margin="150,20,150,0" Click="Submit_Saving_Click" 
                    />

            <Button x:Name="Close_Savings" Content="Close"
                    Margin="150,10,150,0" Click="Close_Savings_Click"
                    />





















        </StackPanel>
    </Border>




</Window>
